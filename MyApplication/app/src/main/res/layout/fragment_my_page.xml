<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.MyPageFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mp_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/mp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="55dp" />

        <TextView
            android:id="@+id/mp_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            tools:layout_editor_absoluteX="306dp"
            tools:layout_editor_absoluteY="55dp" />

        <TextView
            android:id="@+id/mp_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            tools:layout_editor_absoluteX="235dp"
            tools:layout_editor_absoluteY="93dp" />

        <TextView
            android:id="@+id/mp_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            tools:layout_editor_absoluteX="324dp"
            tools:layout_editor_absoluteY="109dp" />
    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/mp_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>