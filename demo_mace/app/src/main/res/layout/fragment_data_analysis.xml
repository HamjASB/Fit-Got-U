<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="0">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@mipmap/category_bar"
                    android:fadingEdge="vertical|none">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="# 나의 운동 상태"
                        android:textAlignment="center"

                        android:textStyle="bold" />
                </TableRow>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:text="나의 점수" />

                    <ImageView
                        android:id="@+id/imageView_l_arm1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/left_arm1_green" />

                    <ImageView
                        android:id="@+id/imageView_r_arm1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/right_arm1_green" />

                    <ImageView
                        android:id="@+id/imageView_l_arm2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/left_arm2_green" />

                    <ImageView
                        android:id="@+id/imageView_r_arm2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/right_arm2_green" />

                    <ImageView
                        android:id="@+id/imageView_l_leg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/left_leg1_green" />

                    <ImageView
                        android:id="@+id/imageView_r_leg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/right_leg1_green" />

                    <ImageView
                        android:id="@+id/imageView_l_leg2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/left_leg2_green" />

                    <ImageView
                        android:id="@+id/imageView_r_leg2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/right_leg2_green" />

                    <ImageView
                        android:id="@+id/imageView_m_body"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/middle_body_green" />

                    <ImageView
                        android:id="@+id/imageView_m_hip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/middle_hip_green" />

                    <ImageView
                        android:id="@+id/imageView_l_sholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/left_sholder_green" />

                    <ImageView
                        android:id="@+id/imageView_r_sholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/right_sholder_green" />

                    <ImageView
                        android:id="@+id/lable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignStart="@+id/imageView_r_sholder"
                        android:layout_alignLeft="@+id/imageView_r_sholder"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:src="@mipmap/lable" />


                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="61dp"
                        android:layout_alignParentBottom="true"
                        android:text="이미지테스트" />


                    <TextView
                        android:id="@+id/textViewPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="11dp"
                        android:layout_marginBottom="52dp"
                        android:text="100점"
                        android:textColor="#33aabb"
                        android:textSize="10pt"
                        android:textStyle="bold" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="나의 운동상태 분석 텍스트" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@mipmap/category_bar"
                    android:baselineAligned="false"
                    android:fadingEdge="vertical|none">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="# 주간 활동 분석"
                        android:textAlignment="center"

                        android:textStyle="bold" />

                </TableRow>

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="238dp"
                    tools:layout_editor_absoluteY="309dp" />


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>